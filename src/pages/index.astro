    <script>
      class Pendulum {
        element: HTMLElement;
        angle: number;
        velocity: number;
        acceleration: number;
        initialAngle: number;
        // Physics constants
        gravity: number = 0.25; // Restoring force strength (Slightly stiffer)
        friction: number = 0.96; // Damping factor (0-1)
        mass: number = 1.6; // Higher mass = slower acceleration

        constructor(element: HTMLElement) {
          this.element = element;
          const initialRotation = parseFloat(
            element.getAttribute("data-initial-rotation") || "0"
          );
          this.initialAngle = initialRotation;
          this.angle = initialRotation;
          this.velocity = 0;
          this.acceleration = 0;
        }

        applyForce(force: number) {
          this.acceleration += force / this.mass;
        }

        update() {
          // 1. Gravity (Restoring force towards initial angle)
          // The further we are from rest, the stronger the pull back
          const displacement = this.angle - this.initialAngle;
          const restoringForce = -this.gravity * displacement;
          this.applyForce(restoringForce);

          // 2. Physics integration
          this.velocity += this.acceleration;
          this.velocity *= this.friction; // Damping
          this.angle += this.velocity;

          // Reset acceleration for next frame
          this.acceleration = 0;

          // 3. Render
          this.element.style.transform = `rotate(${this.angle}deg)`;
        }
      }

      // Initialize system
      const cards = document.querySelectorAll(
        ".paper-card"
      ) as NodeListOf<HTMLElement>;
      const pendulums = Array.from(cards).map((card) => new Pendulum(card));

      // Main Loop
      const loop = () => {
        // Wind Physics
        const time = Date.now() * 0.001; // Seconds
        // Base wind: always swaying slightly
        // Gusts: varied sine waves
        // moderate strength for visible but gentle sway
        const windStrength =
          Math.sin(time) * 0.15 + // Slow base sway (was 0.05)
          Math.sin(time * 2.5) * 0.05 + // Faster jitters (was 0.02)
          Math.sin(time * 0.5) * 0.2; // Long gusts (was 0.1)

        pendulums.forEach((p, index) => {
          // Add phase offset based on index so they don't move in perfect unison
          // Some cards might be "shielded" or react differently (random factor)
          const phase = index * 2;
          const localWind = windStrength + Math.sin(time + phase) * 0.05;

          p.applyForce(localWind);
          p.update();
        });

        requestAnimationFrame(loop);
      };

      // Start
      loop();

      // Form Handling
      const form = document.getElementById("subscribe-form") as HTMLFormElement;
      const emailInput = document.getElementById(
        "email-input"
      ) as HTMLInputElement;
      const submitBtn = document.getElementById(
        "submit-btn"
      ) as HTMLButtonElement;
      const btnText = document.getElementById("btn-text") as HTMLElement;
      const btnIcon = document.getElementById("btn-icon") as HTMLElement;
      const formMessage = document.getElementById(
        "form-message"
      ) as HTMLElement;

      if (form) {
        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          const email = emailInput.value;
          if (!email) return;

          // Loading State
          submitBtn.disabled = true;
          const originalText = btnText.innerText;
          btnText.innerText = "Joining...";

          try {
            const res = await fetch("/api/subscribe", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ email }),
            });

            const data = await res.json();

            if (res.ok) {
              // Success
              formMessage.innerText = "You're on the list! Talk soon.";
              formMessage.className =
                "text-sm font-quirky text-center mt-2 text-terracotta font-bold block";
              emailInput.value = "";
              btnText.innerText = "Joined!";
              btnIcon.innerText = "check";

              setTimeout(() => {
                submitBtn.disabled = false;
                btnText.innerText = originalText;
                btnIcon.innerText = "arrow_forward";
                formMessage.classList.add("hidden");
              }, 5000);
            } else {
              // Error
              throw new Error(data.message || "Something went wrong");
            }
          } catch (err: any) {
            formMessage.innerText = err.message || "Failed to join. Try again.";
            formMessage.className =
              "text-sm font-quirky text-center mt-2 text-red-500 block";
            submitBtn.disabled = false;
            btnText.innerText = originalText;
          }
        });
      }
    </script>
  </body>
</html>
