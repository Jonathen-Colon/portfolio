      .paper-card {
        border-radius: 2px;
        box-shadow:
          2px 3px 10px rgba(0, 0, 0, 0.05),
          10px 10px 0 rgba(0, 0, 0, 0.02);
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      }
      .paper-card:hover {
        transform: scale(1.01) rotate(0deg) !important;
        box-shadow:
          4px 6px 15px rgba(0, 0, 0, 0.1),
          12px 12px 0 rgba(0, 0, 0, 0.03);
        z-index: 30;
      }
      .pin {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        z-index: 40;
        box-shadow:
          2px 4px 8px rgba(0, 0, 0, 0.25),
          inset 2px 2px 5px rgba(255, 255, 255, 0.7),
          inset -2px -2px 6px rgba(0, 0, 0, 0.1);
      }
      .pin::after {
        content: "";
        position: absolute;
        top: 5px;
        left: 6px;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          rgba(255, 255, 255, 0.95) 0%,
          rgba(255, 255, 255, 0.1) 100%
        );
        filter: blur(0.5px);
      }
      .pin-terracotta {
        background-color: #d96c4e;
        background: radial-gradient(circle at 40% 40%, #e68870, #d96c4e);
        border: 1px solid #c25b3d;
      }
      .pin-mustard {
        background-color: #f4c47b;
        background: radial-gradient(circle at 40% 40%, #fce0b0, #f4c47b);
        border: 1px solid #dea652;
      }
      .pin-soft-peach {
        background-color: #fadadd;
        background: radial-gradient(circle at 40% 40%, #fff0f3, #fadadd);
        border: 1px solid #e3c1c4;
      }
      @keyframes float {
        0% {
          transform: translate(0, 0) rotate(0deg);
        }
        33% {
          transform: translate(10px, -15px) rotate(2deg);
        }
        66% {
          transform: translate(-5px, 10px) rotate(-1deg);
        }
        100% {
          transform: translate(0, 0) rotate(0deg);
        }
      }
      .animate-blob {
        animation: float 12s infinite ease-in-out;
      }
    </style>
